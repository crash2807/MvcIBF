@model IEnumerable<MvcIBF.Models.Rating>

@{
    ViewData["Title"] = "Oceny znajomych";
}

<h1>Oceny znajomych</h1>


<table class="table">
    <thead>
        <tr>
            <th>Zdjęcie profilowe</th>
            <th>Znajomy</th>            
            <th>
                @Html.DisplayNameFor(model => model.RatingValue)
            </th>

            <th>@Html.DisplayNameFor(model => model.Comment)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ApplicationUser.ProfilePictureUrl))
                    {
                        <img src="@item.ApplicationUser.ProfilePictureUrl" alt="Profile Picture" style="max-width: 10%; max-height: 10%;" />
                    }
                    else
                    {
                        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png" alt="Default Profile Picture" style="max-width: 10%; max-height: 10%;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.RatingValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>                
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Wróć</a>
</div>
